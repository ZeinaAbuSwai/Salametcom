@{
    ViewBag.Title = "تواصل معنا";
}

<body dir="rtl">

    <h2>@ViewBag.Title.</h2>

    <div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">الاسم</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"
                      class="text-muted "></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">البريد الالكتروني</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"
                      class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="tel">رقم الهاتف</label>
                <input asp-for="tel" class="form-control" />
                <span asp-validation-for="tel"
                      class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message">الرسالة</label>
                <textarea rows="5" cols="15"
                          asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message"
                      class="text-muted"></span>
            </div>
            <div>
                <button type="submit"
                        class="btn btn-success">
                    ارسل الان
                </button>
            </div>

        </form>
    </div>
</body>